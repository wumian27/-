    console.log(scene);
    this.param.sceneData = this.getSceneData(scene);
 }

getSceneData(scene) {
    if (_.isEmpty(scene)) {
      return {
        'type': 0,
        'data': ''
      }
    } else {
      const arrayScene = scene.split(':')
      if (arrayScene.length == 2) {
        const type = arrayScene[0]
        const data = arrayScene[1]
        console.log('场景值类型：' + type)
        console.log('场景值：' + data)
        return {
          'type': type,
          'data': data
        }
      } else {
        return {
          'type': 0,
          'data': ''
        }
      }
    }
  },

